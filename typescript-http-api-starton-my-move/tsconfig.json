{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext", "ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    // "noEmit": true,
    // "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    // "incremental": true,
    // "baseUrl": "src",
    // "tsBuildInfoFile": ".tsbuildinfo",

    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "outDir": ".build",
    "rootDir": "./"
  },
  "include": ["next-env.d.ts", "./src/lib/*.ts", "./src/*.ts", "./src/**/*.ts"],
  "exclude": ["node_modules", "../myMove/**/*"]
}
